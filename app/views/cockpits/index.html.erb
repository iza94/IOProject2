<p id="notice"><%= notice %></p>

<h1>Listing Cockpits</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cockpits.each do |cockpit| %>
      <tr>
        <td><%= link_to 'Show', cockpit %></td>
        <td><%= link_to 'Edit', edit_cockpit_path(cockpit) %></td>
        <td><%= link_to 'Destroy', cockpit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

